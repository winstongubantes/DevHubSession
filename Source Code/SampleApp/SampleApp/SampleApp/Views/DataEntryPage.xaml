<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleApp.DataEntryPage">
   <ScrollView>
       <StackLayout>
           <!--Creating a standard Data entry form-->
           <StackLayout Orientation="Horizontal"
                        Padding="16,0">
               <Label Text="First name" VerticalOptions="Center"></Label>
               <Entry  VerticalOptions="Center" 
                       HorizontalOptions="FillAndExpand"></Entry>
           </StackLayout>
           <StackLayout Orientation="Horizontal"
                        Padding="16,0">
               <Label Text="Last name" VerticalOptions="Center"></Label>
               <Entry  VerticalOptions="Center" 
                       HorizontalOptions="FillAndExpand"></Entry>
           </StackLayout>
            <StackLayout Orientation="Horizontal"
                        Padding="16,0">
                <Label Text="Address" VerticalOptions="Center"></Label>
                <Entry  VerticalOptions="Center" 
                       HorizontalOptions="FillAndExpand"></Entry>
            </StackLayout>
            <Button Text="Submit"
                   Margin="10,0"
                   TextColor="White" 
                   BackgroundColor="#77D065"></Button>
       </StackLayout>
    </ScrollView>
</ContentPage>